generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RolUsuario {
  ADMIN
  VENDEDOR
  COORDINADOR
  USUARIO
}

enum EstadoLead {
  NUEVO
  COTIZANDO
  EN_PROCESO
  CONFIRMADO
  ENTREGADO
}

enum EtapaCotizacion {
  COTIZACION_CONFIRMADA
  DESPACHO
  TRANSITO
  ENTREGADO
}

model User {
  id        String     @id @default(uuid())
  nombre    String
  email     String     @unique
  rol       RolUsuario @default(VENDEDOR)
  password  String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  leads         Lead[]
  cotizaciones  Cotizacion[]          @relation("CotizacionesVendedor")
  reuniones     Reunion[]             @relation("ReunionesVendedor")
  eventosEstado CotizacionEstadoLog[] @relation("EstadoAutor")
}

model Lead {
  id        String     @id @default(uuid())
  nombre    String
  telefono  String
  correo    String?
  estado    EstadoLead @default(NUEVO)
  resumen   String?
  origen    String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  ownerId String?
  owner   User?   @relation(fields: [ownerId], references: [id])

  cotizaciones Cotizacion[]
  reuniones    Reunion[]

  @@index([estado])
}

model Cotizacion {
  id                String          @id @default(uuid())
  codigo            String          @unique
  cliente           String
  total             Decimal         @db.Decimal(14, 2)
  moneda            String          @default("CLP")
  etapa             EtapaCotizacion @default(COTIZACION_CONFIRMADA)
  resumen           String?
  fechaCreacion     DateTime        @default(now())
  entregaProgramada DateTime?

  vendedorId String?
  vendedor   User?                 @relation("CotizacionesVendedor", fields: [vendedorId], references: [id])
  leadId     String?
  lead       Lead?                 @relation(fields: [leadId], references: [id])
  archivos   CotizacionArchivo[]
  historial  CotizacionEstadoLog[]

  @@index([etapa])
  @@index([vendedorId])
  @@index([leadId])
}

model CotizacionArchivo {
  id           String     @id @default(uuid())
  nombre       String
  url          String
  cotizacionId String
  cotizacion   Cotizacion @relation(fields: [cotizacionId], references: [id])
}

model CotizacionEstadoLog {
  id           String          @id @default(uuid())
  etapa        EtapaCotizacion
  nota         String?
  createdAt    DateTime        @default(now())
  cotizacionId String
  cotizacion   Cotizacion      @relation(fields: [cotizacionId], references: [id])
  autorId      String?
  autor        User?           @relation("EstadoAutor", fields: [autorId], references: [id])

  @@index([cotizacionId])
  @@index([autorId])
}

model Reunion {
  id          String      @id @default(uuid())
  titulo      String
  descripcion String?
  inicio      DateTime
  fin         DateTime
  estado      EstadoLead?
  createdAt   DateTime    @default(now())

  leadId     String?
  lead       Lead?   @relation(fields: [leadId], references: [id])
  vendedorId String?
  vendedor   User?   @relation("ReunionesVendedor", fields: [vendedorId], references: [id])

  @@index([leadId])
  @@index([vendedorId])
}
